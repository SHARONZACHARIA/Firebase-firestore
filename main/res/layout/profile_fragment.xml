<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:scrollbars="vertical"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src ="@drawable/ic_closeblack_24dp"/>



    <ImageView
        android:id="@+id/user_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:src ="@drawable/ic_person_black_24dp"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="LOREM IPSUM"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="loremipsum@gmail.com"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/notes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_cloud_done_black_24dp"
        android:gravity="center"
        android:text="  12 notes on cloud "
        android:textStyle="bold" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#969393"
    android:layout_marginBottom="8dp"
    android:layout_margin="4dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/local_copy_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_weight="0"
        android:text="Always keepa a local copy of notes"/>




    <android.support.design.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="Logout"
         android:layout_alignParentBottom="true"
        android:textSize="12sp"
        app:cornerRadius="8dp"
        android:layout_margin="8dp"
        app:rippleColor="@color/time_color" />



    </RelativeLayout>


</LinearLayout>
